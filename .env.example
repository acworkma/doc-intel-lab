# Azure Storage Account Configuration
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_CONTAINER_NAME=your_source_container_name
AZURE_STORAGE_OUTPUT_CONTAINER=your_output_container_name

# Azure Document Intelligence Configuration
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your_region.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_document_intelligence_key

# Azure Authentication - Azure CLI (Recommended)
# Run 'az login' before using the application
# No additional configuration needed for authentication

# Alternative: Service Principal (if you prefer service principal authentication)
# AZURE_CLIENT_ID=your_client_id
# AZURE_CLIENT_SECRET=your_client_secret
# AZURE_TENANT_ID=your_tenant_id

# Alternative: Use Managed Identity (if running on Azure VM/App Service/etc.)
# AZURE_USE_MANAGED_IDENTITY=true

# Processing Configuration
MAX_CONCURRENT_OPERATIONS=5
POLLING_INTERVAL_SECONDS=5
